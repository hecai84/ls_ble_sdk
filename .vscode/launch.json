    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "./build/le501x/project/ble_uart_server.elf",
            "name": "Debug LE501X BLE_UART_SERVER",
            "device": "LE501X",
            "interface": "swd",
            "runToMain": true,
            "preLaunchCommands":[
                "monitor flash breakpoints = 0",
                "monitor reset",
                "load", 
                //"add-symbol-file build/fw.elf",  
            ]
        },
        {
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "jlink",
            "cwd": "${workspaceRoot}",
            "executable": "./build/le501x/project/ble_uart_server.elf",
            "name": "Attach BLE_UART_SERVER",
            "device": "LE501X",
            "interface": "swd",
            "preAttachCommands":[
                "monitor flash breakpoints = 0",
                //"add-symbol-file build/fw.elf",  
            ]
        },
        
    ]
}